{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { getProDetail, getProComments } from '@/api/product';\nimport defaultImg from '@/assets/default-avatar.png';\nimport CountBox from '@/components/CountBox.vue';\nimport { addCart } from '@/api/cart';\nimport loginConfirm from '@/mixins/loginConfirm';\nexport default {\n  name: 'ProDetail',\n  mixins: [loginConfirm],\n  components: {\n    CountBox\n  },\n  data() {\n    return {\n      images: ['https://img01.yzcdn.cn/vant/apple-1.jpg', 'https://img01.yzcdn.cn/vant/apple-2.jpg'],\n      current: 0,\n      detail: {},\n      comment: {},\n      totalcomment: 0,\n      defaultImg,\n      showPannel: false,\n      // 判断是否显示购物弹框\n      mode: '',\n      // 判断当前弹窗加入购物车还是直接购买\n      addCount: 1,\n      // 数字框绑定的数据\n      cartTotal: 0 // 存储添加到购物车的数量\n    };\n  },\n  computed: {\n    goodsId() {\n      return this.$route.params.id;\n    }\n  },\n  methods: {\n    onChange(index) {\n      this.current = index;\n    },\n    async getDetail() {\n      // const res = await getProDetail(this.goodsId)\n      const {\n        data: {\n          detail\n        }\n      } = await getProDetail(this.goodsId);\n      this.detail = detail;\n      // console.log(res)\n      this.images = detail.goods_images;\n    },\n    async getComment() {\n      const {\n        data: {\n          list,\n          total\n        }\n      } = await getProComments(this.goodsId, 3);\n      this.comment = list;\n      this.totalcomment = total;\n    },\n    addCart() {\n      this.mode = 'cart';\n      this.showPannel = true;\n    },\n    buyNow() {\n      this.mode = 'buyNow';\n      this.showPannel = true;\n    },\n    // 在点击立即购买与加入购物车判断是否登录\n    async addcart() {\n      // 判断是否存在\n      if (this.loginConfirm()) {\n        return;\n      }\n      const {\n        data\n      } = await addCart(this.goodsId, this.addCount, this.detail.skuList[0].goods_sku_id);\n      this.cartTotal = data.cartTotal;\n      this.$toast('加入购物车成功');\n      this.showPannel = false;\n      // console.log(this.cartTotal)\n    },\n    // 立刻购买点击\n    goBuyNow() {\n      // 未登录的处理：需要弹出确认框\n      if (this.loginConfirm()) {\n        return;\n      }\n      this.$router.push({\n        path: '/pay',\n        query: {\n          mode: 'buyNow',\n          goodsId: this.goodsId,\n          goodsSkuId: this.detail.skuList[0].goods_sku_id,\n          goodsNum: this.addCount\n        }\n      });\n    }\n  },\n  created() {\n    this.getDetail();\n    this.getComment();\n  }\n};","map":{"version":3,"names":["getProDetail","getProComments","defaultImg","CountBox","addCart","loginConfirm","name","mixins","components","data","images","current","detail","comment","totalcomment","showPannel","mode","addCount","cartTotal","computed","goodsId","$route","params","id","methods","onChange","index","getDetail","goods_images","getComment","list","total","buyNow","addcart","skuList","goods_sku_id","$toast","goBuyNow","$router","push","path","query","goodsSkuId","goodsNum","created"],"sources":["src/views/prodetail/index.vue"],"sourcesContent":["<template>\r\n  <div class=\"prodetail\">\r\n    <van-nav-bar fixed title=\"商品详情页\" left-arrow @click-left=\"$router.go(-1)\" />\r\n\r\n    <van-swipe :autoplay=\"3000\" @change=\"onChange\">\r\n      <van-swipe-item v-for=\"(image, index) in images\" :key=\"index\">\r\n        <img :src=\"image.external_url\" />\r\n      </van-swipe-item>\r\n\r\n      <template #indicator>\r\n        <div class=\"custom-indicator\">{{ current + 1 }} / {{ images.length }}</div>\r\n      </template>\r\n    </van-swipe>\r\n\r\n    <!-- 商品说明 -->\r\n    <div class=\"info\">\r\n      <div class=\"title\">\r\n        <div class=\"price\">\r\n          <span class=\"now\">￥{{detail.goods_price_min}}</span>\r\n          <span class=\"oldprice\">￥{{detail.line_price_min\r\n}}</span>\r\n        </div>\r\n        <div class=\"sellcount\">已售{{detail.goods_sales}}件</div>\r\n      </div>\r\n      <div class=\"msg text-ellipsis-2\">\r\n        {{detail.goods_name}}\r\n      </div>\r\n\r\n      <div class=\"service\">\r\n        <div class=\"left-words\">\r\n          <span><van-icon name=\"passed\" />七天无理由退货</span>\r\n          <span><van-icon name=\"passed\" />48小时发货</span>\r\n        </div>\r\n        <div class=\"right-icon\">\r\n          <van-icon name=\"arrow\" />\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 商品评价 -->\r\n    <div class=\"comment\">\r\n      <div class=\"comment-title\">\r\n        <div class=\"left\">商品评价 ({{totalcomment}}条)</div>\r\n        <div class=\"right\">查看更多 <van-icon name=\"arrow\" /> </div>\r\n      </div>\r\n      <div class=\"comment-list\">\r\n        <div class=\"comment-item\" v-for=\"item in comment\" :key=\"item.comment_id\">\r\n          <div class=\"top\">\r\n            <img :src=\"item.user.avatar_url || defaultImg\" alt=\"\">\r\n            <div class=\"name\">{{item.user.nick_name}}</div>\r\n            <van-rate :size=\"16\" :value=\"item.score/10\" color=\"#ffd21e\" void-icon=\"star\" void-color=\"#eee\"/>\r\n          </div>\r\n          <div class=\"content\">\r\n            {{item.content}}\r\n          </div>\r\n          <div class=\"time\">\r\n            {{item.create_time}}\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 商品描述 -->\r\n    <div class=\"desc\" v-html=\"detail.content\">\r\n    </div>\r\n\r\n    <!-- 底部 -->\r\n    <div class=\"footer\">\r\n      <div @click=\"$router.push('/')\" class=\"icon-home\">\r\n        <van-icon name=\"wap-home-o\" />\r\n        <span>首页</span>\r\n      </div>\r\n      <div  @click=\"$router.push('/cart')\" class=\"icon-cart\">\r\n        <span v-if=\"cartTotal > 0\" class=\"num\">{{ cartTotal }}</span>\r\n        <van-icon name=\"shopping-cart-o\" />\r\n        <span>购物车</span>\r\n      </div>\r\n\r\n      <div class=\"btn-add\" @click=\"addCart\">加入购物车</div>\r\n      <div class=\"btn-buy\" @click=\"buyNow\">立刻购买</div>\r\n    </div>\r\n\r\n    <!-- 加入购物车弹窗 -->\r\n    <van-action-sheet v-model=\"showPannel\" :title=\"mode==='cart' ? '加入购物车' : '立刻购买'\">\r\n    <div class=\"product\">\r\n      <div class=\"product-title\">\r\n        <div class=\"left\">\r\n          <img :src=\"detail.goods_image\" alt=\"\">\r\n        </div>\r\n        <div class=\"right\">\r\n          <div class=\"price\">\r\n            <span>¥</span>\r\n            <span class=\"nowprice\">{{ detail.goods_price_min }}</span>\r\n          </div>\r\n          <div class=\"count\">\r\n            <span>库存</span>\r\n            <span>{{ detail.stock_total }}</span>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <div class=\"num-box\">\r\n        <span>数量</span>\r\n        <!-- v-model本质上是：value与@input的简写 -->\r\n        <CountBox v-model=\"addCount\" ></CountBox>\r\n      </div>\r\n      <div class=\"showbtn\" v-if=\"detail.stock_total>0\">\r\n        <div class=\"btn\" v-if=\" mode==='cart'\" @click=\"addcart\">加入购物车</div>\r\n        <div class=\"btn now\" v-else @click=\"goBuyNow\">立刻购买</div>\r\n      </div>\r\n      <div class=\"btn-none\" v-else>该商品已抢完</div>\r\n    </div>\r\n    </van-action-sheet>\r\n  </div>\r\n\r\n</template>\r\n\r\n<script>\r\nimport { getProDetail, getProComments } from '@/api/product'\r\nimport defaultImg from '@/assets/default-avatar.png'\r\nimport CountBox from '@/components/CountBox.vue'\r\nimport { addCart } from '@/api/cart'\r\nimport loginConfirm from '@/mixins/loginConfirm'\r\nexport default {\r\n  name: 'ProDetail',\r\n  mixins: [loginConfirm],\r\n  components: {\r\n    CountBox\r\n  },\r\n  data () {\r\n    return {\r\n      images: [\r\n        'https://img01.yzcdn.cn/vant/apple-1.jpg',\r\n        'https://img01.yzcdn.cn/vant/apple-2.jpg'\r\n      ],\r\n      current: 0,\r\n      detail: {},\r\n      comment: {},\r\n      totalcomment: 0,\r\n      defaultImg,\r\n      showPannel: false, // 判断是否显示购物弹框\r\n      mode: '', // 判断当前弹窗加入购物车还是直接购买\r\n      addCount: 1, // 数字框绑定的数据\r\n      cartTotal: 0 // 存储添加到购物车的数量\r\n    }\r\n  },\r\n  computed: {\r\n    goodsId () {\r\n      return this.$route.params.id\r\n    }\r\n  },\r\n\r\n  methods: {\r\n    onChange (index) {\r\n      this.current = index\r\n    },\r\n    async getDetail () {\r\n      // const res = await getProDetail(this.goodsId)\r\n      const { data: { detail } } = await getProDetail(this.goodsId)\r\n      this.detail = detail\r\n      // console.log(res)\r\n      this.images = detail.goods_images\r\n    },\r\n    async getComment () {\r\n      const { data: { list, total } } = await getProComments(this.goodsId, 3)\r\n      this.comment = list\r\n      this.totalcomment = total\r\n    },\r\n    addCart () {\r\n      this.mode = 'cart'\r\n      this.showPannel = true\r\n    },\r\n    buyNow () {\r\n      this.mode = 'buyNow'\r\n      this.showPannel = true\r\n    },\r\n\r\n    // 在点击立即购买与加入购物车判断是否登录\r\n    async addcart () {\r\n      // 判断是否存在\r\n      if (this.loginConfirm()) {\r\n        return\r\n      }\r\n      const { data } = await addCart(this.goodsId, this.addCount, this.detail.skuList[0].goods_sku_id)\r\n      this.cartTotal = data.cartTotal\r\n      this.$toast('加入购物车成功')\r\n      this.showPannel = false\r\n      // console.log(this.cartTotal)\r\n    },\r\n    // 立刻购买点击\r\n    goBuyNow () {\r\n      // 未登录的处理：需要弹出确认框\r\n      if (this.loginConfirm()) {\r\n        return\r\n      }\r\n      this.$router.push({\r\n        path: '/pay',\r\n        query: {\r\n          mode: 'buyNow',\r\n          goodsId: this.goodsId,\r\n          goodsSkuId: this.detail.skuList[0].goods_sku_id,\r\n          goodsNum: this.addCount\r\n        }\r\n      })\r\n    }\r\n  },\r\n\r\n  created () {\r\n    this.getDetail()\r\n    this.getComment()\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n.prodetail {\r\n  padding-top: 46px;\r\n  ::v-deep .van-icon-arrow-left {\r\n    color: #333;\r\n  }\r\n  img {\r\n    display: block;\r\n    width: 100%;\r\n  }\r\n  .custom-indicator {\r\n    position: absolute;\r\n    right: 10px;\r\n    bottom: 10px;\r\n    padding: 5px 10px;\r\n    font-size: 12px;\r\n    background: rgba(0, 0, 0, 0.1);\r\n    border-radius: 15px;\r\n  }\r\n  .desc {\r\n    width: 100%;\r\n    overflow: scroll;\r\n    ::v-deep img {\r\n      display: block;\r\n      width: 100%!important;\r\n    }\r\n  }\r\n  .info {\r\n    padding: 10px;\r\n  }\r\n  .title {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    .now {\r\n      color: #fa2209;\r\n      font-size: 20px;\r\n    }\r\n    .oldprice {\r\n      color: #959595;\r\n      font-size: 16px;\r\n      text-decoration: line-through;\r\n      margin-left: 5px;\r\n    }\r\n    .sellcount {\r\n      color: #959595;\r\n      font-size: 16px;\r\n      position: relative;\r\n      top: 4px;\r\n    }\r\n  }\r\n  .msg {\r\n    font-size: 16px;\r\n    line-height: 24px;\r\n    margin-top: 5px;\r\n  }\r\n  .service {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    line-height: 40px;\r\n    margin-top: 10px;\r\n    font-size: 16px;\r\n    background-color: #fafafa;\r\n    .left-words {\r\n      span {\r\n        margin-right: 10px;\r\n      }\r\n      .van-icon {\r\n        margin-right: 4px;\r\n        color: #fa2209;\r\n      }\r\n    }\r\n  }\r\n\r\n  .comment {\r\n    padding: 10px;\r\n  }\r\n  .comment-title {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    .right {\r\n      color: #959595;\r\n    }\r\n  }\r\n\r\n  .comment-item {\r\n    font-size: 16px;\r\n    line-height: 30px;\r\n    .top {\r\n      height: 30px;\r\n      display: flex;\r\n      align-items: center;\r\n      margin-top: 20px;\r\n      img {\r\n        width: 20px;\r\n        height: 20px;\r\n      }\r\n      .name {\r\n        margin: 0 10px;\r\n      }\r\n    }\r\n    .time {\r\n      color: #999;\r\n    }\r\n  }\r\n\r\n  .footer {\r\n    position: fixed;\r\n    left: 0;\r\n    bottom: 0;\r\n    width: 100%;\r\n    height: 55px;\r\n    background-color: #fff;\r\n    border-top: 1px solid #ccc;\r\n    display: flex;\r\n    justify-content: space-evenly;\r\n    align-items: center;\r\n    .icon-home, .icon-cart {\r\n      display: flex;\r\n      flex-direction: column;\r\n      align-items: center;\r\n      justify-content: center;\r\n      font-size: 14px;\r\n      .van-icon {\r\n        font-size: 24px;\r\n      }\r\n    }\r\n    .btn-add,\r\n    .btn-buy {\r\n      height: 36px;\r\n      line-height: 36px;\r\n      width: 120px;\r\n      border-radius: 18px;\r\n      background-color: #ffa900;\r\n      text-align: center;\r\n      color: #fff;\r\n      font-size: 14px;\r\n    }\r\n    .btn-buy {\r\n      background-color: #fe5630;\r\n    }\r\n  }\r\n}\r\n\r\n.tips {\r\n  padding: 10px;\r\n}\r\n.product {\r\n  .product-title {\r\n    display: flex;\r\n    .left {\r\n      img {\r\n        width: 90px;\r\n        height: 90px;\r\n      }\r\n      margin: 10px;\r\n    }\r\n    .right {\r\n      flex: 1;\r\n      padding: 10px;\r\n      .price {\r\n        font-size: 14px;\r\n        color: #fe560a;\r\n        .nowprice {\r\n          font-size: 24px;\r\n          margin: 0 5px;\r\n        }\r\n      }\r\n    }\r\n  }\r\n\r\n  .num-box {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    padding: 10px;\r\n    align-items: center;\r\n  }\r\n\r\n  .btn, .btn-none {\r\n    height: 40px;\r\n    line-height: 40px;\r\n    margin: 20px;\r\n    border-radius: 20px;\r\n    text-align: center;\r\n    color: rgb(255, 255, 255);\r\n    background-color: rgb(255, 148, 2);\r\n  }\r\n  .btn.now {\r\n    background-color: #fe5630;\r\n  }\r\n  .btn-none {\r\n    background-color: #cccccc;\r\n  }\r\n}\r\n.footer .icon-cart {\r\n  position: relative;\r\n  padding: 0 6px;\r\n  .num {\r\n    z-index: 999;\r\n    position: absolute;\r\n    top: -2px;\r\n    right: 0;\r\n    min-width: 16px;\r\n    padding: 0 4px;\r\n    color: #fff;\r\n    text-align: center;\r\n    background-color: #ee0a24;\r\n    border-radius: 50%;\r\n  }\r\n}\r\n\r\n</style>\r\n"],"mappings":";AAqHA,SAAAA,YAAA,EAAAC,cAAA;AACA,OAAAC,UAAA;AACA,OAAAC,QAAA;AACA,SAAAC,OAAA;AACA,OAAAC,YAAA;AACA;EACAC,IAAA;EACAC,MAAA,GAAAF,YAAA;EACAG,UAAA;IACAL;EACA;EACAM,KAAA;IACA;MACAC,MAAA,GACA,2CACA,0CACA;MACAC,OAAA;MACAC,MAAA;MACAC,OAAA;MACAC,YAAA;MACAZ,UAAA;MACAa,UAAA;MAAA;MACAC,IAAA;MAAA;MACAC,QAAA;MAAA;MACAC,SAAA;IACA;EACA;EACAC,QAAA;IACAC,QAAA;MACA,YAAAC,MAAA,CAAAC,MAAA,CAAAC,EAAA;IACA;EACA;EAEAC,OAAA;IACAC,SAAAC,KAAA;MACA,KAAAf,OAAA,GAAAe,KAAA;IACA;IACA,MAAAC,UAAA;MACA;MACA;QAAAlB,IAAA;UAAAG;QAAA;MAAA,UAAAZ,YAAA,MAAAoB,OAAA;MACA,KAAAR,MAAA,GAAAA,MAAA;MACA;MACA,KAAAF,MAAA,GAAAE,MAAA,CAAAgB,YAAA;IACA;IACA,MAAAC,WAAA;MACA;QAAApB,IAAA;UAAAqB,IAAA;UAAAC;QAAA;MAAA,UAAA9B,cAAA,MAAAmB,OAAA;MACA,KAAAP,OAAA,GAAAiB,IAAA;MACA,KAAAhB,YAAA,GAAAiB,KAAA;IACA;IACA3B,QAAA;MACA,KAAAY,IAAA;MACA,KAAAD,UAAA;IACA;IACAiB,OAAA;MACA,KAAAhB,IAAA;MACA,KAAAD,UAAA;IACA;IAEA;IACA,MAAAkB,QAAA;MACA;MACA,SAAA5B,YAAA;QACA;MACA;MACA;QAAAI;MAAA,UAAAL,OAAA,MAAAgB,OAAA,OAAAH,QAAA,OAAAL,MAAA,CAAAsB,OAAA,IAAAC,YAAA;MACA,KAAAjB,SAAA,GAAAT,IAAA,CAAAS,SAAA;MACA,KAAAkB,MAAA;MACA,KAAArB,UAAA;MACA;IACA;IACA;IACAsB,SAAA;MACA;MACA,SAAAhC,YAAA;QACA;MACA;MACA,KAAAiC,OAAA,CAAAC,IAAA;QACAC,IAAA;QACAC,KAAA;UACAzB,IAAA;UACAI,OAAA,OAAAA,OAAA;UACAsB,UAAA,OAAA9B,MAAA,CAAAsB,OAAA,IAAAC,YAAA;UACAQ,QAAA,OAAA1B;QACA;MACA;IACA;EACA;EAEA2B,QAAA;IACA,KAAAjB,SAAA;IACA,KAAAE,UAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}