{"ast":null,"code":"//使用map计算属性与方法简化命名映射\nimport { mapState, mapGetters } from 'vuex';\nexport default {\n  name: 'Son1Com',\n  methods: {\n    handleAdd() {\n      //严格模式报错，且难以维护\n      //this.$store.state.count++\n      // console.log(this.$store.state.count);\n      this.$store.commit('addCount');\n    },\n    handleTitle() {\n      this.$store.commit('changeTitle');\n    }\n  },\n  computed: {\n    ...mapState(['user']),\n    ...mapState('setting', ['theme', 'desc']),\n    ...mapGetters('user', ['UpperCaseName'])\n  }\n};","map":{"version":3,"names":["mapState","mapGetters","name","methods","handleAdd","$store","commit","handleTitle","computed"],"sources":["src/components/Son1.vue"],"sourcesContent":["<template>\r\n  <div class=\"box\">\r\n    <h2>Son1 子组件</h2>\r\n    从vuex中获取的值: <label>{{ $store.state.count }}</label>\r\n    <br>\r\n    <button @click=\"handleAdd\">值 + 1</button>\r\n    <button @click=\"handleTitle\">改标题</button>\r\n    <hr>\r\n    <div>{{ $store.state.list }}</div>\r\n    <hr>\r\n    <div>{{ user.userInfo.name }}</div>\r\n    <!-- 使用mapState访问使用命名空间寻找数据 -->\r\n    <div>stting模块数据：{{ theme }}-{{ desc }}</div>\r\n      <hr>\r\n    <!-- 访问模块中的getters 通过直接映射与映射 -->\r\n    <div>{{ $store.getters['user/UpperCaseName'] }}</div>\r\n    <button>更新个人信息</button>\r\n    <div>{{ UpperCaseName }}</div>\r\n    <button>更新主题颜色</button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n//使用map计算属性与方法简化命名映射\r\nimport {mapState,mapGetters} from 'vuex'\r\nexport default {\r\n  name: 'Son1Com',\r\n  methods:{\r\n    handleAdd(){\r\n      //严格模式报错，且难以维护\r\n      //this.$store.state.count++\r\n     // console.log(this.$store.state.count);\r\n     this.$store.commit('addCount')\r\n    },\r\n    handleTitle(){\r\n      this.$store.commit('changeTitle')\r\n    },\r\n  },\r\n  computed:{\r\n      ...mapState(['user']),\r\n      ...mapState('setting',['theme','desc']),\r\n      ...mapGetters('user',['UpperCaseName'])\r\n    }\r\n}\r\n</script>\r\n\r\n<style lang=\"css\" scoped>\r\n.box{\r\n  border: 3px solid #ccc;\r\n  width: 400px;\r\n  padding: 10px;\r\n  margin: 20px;\r\n}\r\nh2 {\r\n  margin-top: 10px;\r\n}\r\n</style>"],"mappings":"AAuBA;AACA,SAAAA,QAAA,EAAAC,UAAA;AACA;EACAC,IAAA;EACAC,OAAA;IACAC,UAAA;MACA;MACA;MACA;MACA,KAAAC,MAAA,CAAAC,MAAA;IACA;IACAC,YAAA;MACA,KAAAF,MAAA,CAAAC,MAAA;IACA;EACA;EACAE,QAAA;IACA,GAAAR,QAAA;IACA,GAAAA,QAAA;IACA,GAAAC,UAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}